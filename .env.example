# NextAuth v5 Configuration (BOTH AUTH_ and NEXTAUTH_ required for compatibility)
# CRITICAL: Set these in Vercel Dashboard -> Settings -> Environment Variables
AUTH_SECRET=change_this_to_a_long_random_string_in_production
AUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change_this_to_a_long_random_string_in_production
NEXTAUTH_URL=http://localhost:3000
# IMPORTANT: For Vercel deployment, set AUTH_URL and NEXTAUTH_URL to your production domain
# WITHOUT trailing slash: https://yourdomain.vercel.app (NOT https://yourdomain.vercel.app/)

# Database Configuration
# PostgreSQL connection string from Supabase
# Get from: Supabase Dashboard -> Settings -> Database -> Connection string (Session mode)
# Format: postgresql://postgres.xxxxx:YOUR_PASSWORD@aws-REGION.pooler.supabase.com:5432/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/executive_elite_group?schema=public&sslmode=require

# Alternative PostgreSQL environment variables (if not using DATABASE_URL)
PGDATABASE=executive_elite_group
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=YOUR_PASSWORD

# Email Service (MailerSend)
MAILERSEND_API_KEY=your_mailersend_api_key_here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Legacy Stripe Keys (if needed)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Supabase Storage (for resume uploads - optional)
# If using Supabase Storage instead of local file storage:
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
